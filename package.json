{
  "name": "gramatist",
  "private": true,
  "version": "0.0.1",
  "description": "Web-app for studing gramar in practise exersises",
  "repository": "https://github.com/agrudtsin/gramatist",
  "license": "MIT",
  "dependencies": {
    "http-server": "latest",
    "bower": "latest",
    "shelljs": "^0.2.6",
    "karma": "~0.10",
    "karma-js-coverage": "^0.4.0",
    "karma-junit-reporter": "^0.2.2",
    "karma-phantomjs-launcher": "^0.1.4",
    "phantomjs": "^1.9.12",
    "protractor": "^1.1.1",
    "http-server": "latest",
    "shelljs": "^0.2.6"
  },
  "scripts": {
    "postinstall": "node ./node_modules/.bin/bower install",
    "prestart": "npm install",
    "start": "node ./node_modules/.bin/http-server -a localhost ./app",
    "pretest": "npm install",
    "test-watch": "node ./node_modules/.bin/karma start karma.conf.js",
    "test": "node ./node_modules/.bin/karma start karma.conf.js  --single-run",
    "preupdate-webdriver": "npm install",
    "update-webdriver": "webdriver-manager update",
    "preprotractor": "npm run update-webdriver",
    "protractor": "node ./node_modules/.bin/protractor e2e-tests/protractor.conf.js"

  }
}
